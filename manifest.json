{
	"manifest_version": 2,

  	"name": "DNS Overrider",
  	"description": "This extension allows you to override domain names inside web-pages.",
  	"version": "0.1.1",

    "icons": { 
      "16":  "img/dns_icon16.png",
      "48":  "img/dns_icon48.png",
      "128": "img/dns_icon128.png" 
    },

  	"page_action": {
  		"default_icon": {                    
      		"19": "img/dns_enabled_19.png",           
      		"38": "img/dns_enabled_38.png"
    	},

    	"default_title": "Chrome DNS",
    	"default_popup": "popup.html"
    },

    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["log.js", "jquery-2.0.3.min.js","contentscript.js"],
      "runat": "document_end"
    }],

    "background": {
      "scripts": ["log.js", "background.js"],
      "persistent": true
  	},

    "options_page": "options/options.html"
}